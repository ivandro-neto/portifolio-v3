<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume - {{name}}</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    :root {
      --primary: #1F2937;
      /* Gray 800 */
      --secondary: #374151;
      /* Gray 700 */
      --accent: #2563EB;
      /* Blue 600 */
      --text-light: #6B7280;
      /* Gray 500 */
      --bg-page: #FFFFFF;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--bg-page);
      color: var(--primary);
      line-height: 1.4;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    /* Layout */
    .page {
      max-width: 210mm;
      margin: 0 auto;
      padding: 15px 25px;
      /* Reduced padding */
      background: white;
      display: grid;
      grid-template-columns: 28% 1fr;
      /* Sidebar slightly narrower */
      gap: 20px;
      /* Reduced gap */
    }

    /* Typography */
    h1 {
      font-size: 24px;
      /* Reduced from 32px */
      font-weight: 800;
      color: #111827;
      text-transform: uppercase;
      letter-spacing: -0.5px;
      margin-bottom: 2px;
    }

    h2 {
      font-size: 14px;
      /* Reduced from 18px */
      font-weight: 700;
      color: #111827;
      text-transform: uppercase;
      border-bottom: 2px solid var(--accent);
      padding-bottom: 2px;
      margin-bottom: 6px;
      /* Reduced margin */
      margin-top: 10px;
      /* Reduced margin */
    }

    h2:first-of-type {
      margin-top: 0;
    }

    h3 {
      font-size: 13px;
      /* Reduced from 16px */
      font-weight: 700;
      color: #1F2937;
      margin-bottom: 1px;
    }

    p,
    li,
    span,
    div {
      font-size: 11px;
      /* Reduced base font size */
      color: #4B5563;
    }

    a {
      color: var(--accent);
      text-decoration: none;
    }

    /* Sidebar Elements */
    .sidebar {
      display: flex;
      flex-direction: column;
      gap: 12px;
      /* Reduced gap */
    }

    .contact-item {
      display: flex;
      align-items: center;
      gap: 6px;
      margin-bottom: 4px;
      font-size: 11px;
      color: #374151;
      word-break: break-all;
    }

    .contact-label {
      font-weight: 600;
      color: var(--primary);
      min-width: 45px;
    }

    .skill-category {
      margin-bottom: 8px;
    }

    .skill-category-title {
      font-weight: 700;
      font-size: 11px;
      /* Consistent size */
      color: #374151;
      display: block;
      margin-bottom: 2px;
    }

    .skill-list {
      font-size: 11px;
      color: #6B7280;
      line-height: 1.3;
    }

    .education-item {
      margin-bottom: 8px;
    }

    .education-degree {
      font-size: 12px;
      font-weight: 600;
      color: #1F2937;
    }

    /* Main Content Elements */
    .header {
      grid-column: 1 / -1;
      margin-bottom: 2px;
      /* Reduced margin */
      border-bottom: 1px solid #E5E7EB;
      padding-bottom: 10px;
    }

    .role-title {
      font-size: 14px;
      font-weight: 500;
      color: var(--accent);
      margin-bottom: 6px;
    }

    .summary {
      font-size: 11px;
      color: #4B5563;
      max-width: 90%;
      text-align: justify;
    }

    .experience-item {
      margin-bottom: 8px;
      /* Reduced margin */
      page-break-inside: avoid;
    }

    .exp-header {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 2px;
    }

    .exp-role {
      font-size: 13px;
      font-weight: 700;
      color: #1F2937;
    }

    .exp-company {
      font-weight: 600;
      color: var(--accent);
      font-size: 11px;
      margin-bottom: 2px;
    }

    .exp-date {
      font-size: 10px;
      color: #9CA3AF;
      font-weight: 500;
      white-space: nowrap;
    }

    .exp-desc {
      white-space: pre-line;
      line-height: 1.3;
      text-align: justify;
    }

    .project-item {
      margin-bottom: 6px;
      /* Reduced margin */
      page-break-inside: avoid;
    }

    .project-title {
      font-size: 12px;
      font-weight: 700;
    }

    .project-link {
      font-size: 10px;
      margin-left: 4px;
      color: var(--accent);
      text-decoration: underline;
    }

    .project-tech {
      margin-top: 2px;
      font-size: 10px;
      color: #6B7280;
    }
  </style>
</head>

<body>
  <div class="page">
    <!-- Header Section (Full Width) -->
    <header class="header">
      <h1>{{name}}</h1>
      <div class="role-title">Backend Software Engineer</div>
      <p class="summary">{{summary}}</p>
    </header>

    <!-- Left Sidebar -->
    <aside class="sidebar">
      <!-- Contact -->
      <section>
        <h2>Contact</h2>
        <div class="contact-list">
          {{#each links}}
          <div class="contact-item">
            <span class="contact-label">Email</span>
            <a href="mailto:{{mail}}">{{mail}}</a>
          </div>
          {{#if tel}}
          <div class="contact-item">
            <span class="contact-label">Phone</span>
            <a href="tel:{{tel}}">{{tel}}</a>
          </div>
          {{/if}}
          {{#if lndk}}
          <div class="contact-item">
            <span class="contact-label">Linked</span>
            <a href="https://www.{{lndk}}" target="_blank">in/ineto818</a>
          </div>
          {{/if}}
          {{#if git}}
          <div class="contact-item">
            <span class="contact-label">Github</span>
            <a href="https://www.{{git}}" target="_blank">ivandro-neto</a>
          </div>
          {{/if}}
          <div class="contact-item">
            <span class="contact-label">Blog</span>
            <a href="https://hashnode.com/@ineto" target="_blank">@ineto</a>
          </div>
          {{#if web}}
          <div class="contact-item">
            <span class="contact-label">Web</span>
            <a href="https://www.{{web}}" target="_blank">{{web}}</a>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </section>

      <!-- Education -->
      <section>
        <h2>Education</h2>
        {{#each educations}}
        <div class="education-item">
          <div class="education-degree">{{degree}}</div>
          <div style="font-size: 11px; color: #6B7280;">{{institution}}</div>
        </div>
        {{/each}}
      </section>
      <section>
        <h2>Certifications</h2>
        {{#each certifications}}
        <div class="education-item">
          <div class="education-degree">{{degree}}</div>
          <div style="font-size: 11px; color: #6B7280;">{{institution}}</div>
        </div>
        {{/each}}
      </section>

      <!-- Skills -->
      <section>
        <h2>Skills</h2>
        {{#each skills}}
        <div class="skill-category">
          <span class="skill-category-title">{{category}}</span>
          <div class="skill-list">{{technologies}}</div>
        </div>
        {{/each}}
      </section>

      <!-- Interests -->
      <section>
        <h2>Interests</h2>
        <p style="line-height: 1.3;">{{interests}}</p>
      </section>
    </aside>

    <!-- Main Content -->
    <main>
      <!-- Experience -->
      <section>
        <h2>Experience</h2>
        {{#each experience}}
        <div class="experience-item">
          <div class="exp-header">
            <span class="exp-role">{{role}}</span>
            <span class="exp-date">{{period}}</span>
          </div>
          <div class="exp-company">{{company}} - {{seniority}}</div>
          <p class="exp-desc">{{description}}</p>
        </div>
        {{/each}}
      </section>

      <!-- Projects -->
      <section style="margin-top: 4px;">
        <h2>Selected Projects</h2>
        {{#each projects}}
        <div class="project-item">
          <div class="project-title">
            {{title}}
            <a href="{{liveLink}}" class="project-link" target="_blank">[link]</a>
          </div>
          <p style="line-height: 1.3;">{{description}}</p>
          <div class="project-tech">
            <strong>Tech:</strong>
            {{#each techs}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
          </div>
        </div>
        {{/each}}
      </section>
    </main>
  </div>
</body>

</html>