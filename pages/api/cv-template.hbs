    .nav-link::before {
      position: absolute;
      content: '';
      background-color: var(--offtext);
      width: 1rem;
      height: 0.1rem;
      bottom: -0.2rem;
      left: 0;
      transition: all 300ms;
    }

    .nav-link.active {
      color: var(--primary);
    }

    .nav-link.active::before {
      width: 100%;
    }

    .logo {
      position: relative;
      display: grid;
      place-items: center;
    }

    .logo::before {
      position: absolute;
      content: '';
      width: 8em;
      height: 8em;
      border: 1px solid var(--offtext);
      border-radius: 100%;
      animation: pulse 1s infinite;
    }

    .logo::after {
      position: absolute;
      content: '';
      width: 10em;
      height: 10em;
      border: 1px solid var(--offtext);
      border-radius: 100%;
      opacity: 0;
    }

    .logo.pulsing::after {
      opacity: 1;
      animation: pulseLong 1s infinite;
    }

    .logo:hover::before,
    .logo:hover::after,
    .logo.pulsing::before,
    .logo.pulsing::after {
      border: 2px solid var(--offtext);
    }

    .logo img {
      width: 4em;
    }

    html {
      scroll-behavior: smooth;
    }

    @keyframes pulse {
      0% {
        transform: scale(1);
        opacity: 0;
      }

      50% {
        opacity: 1;
      }

      100% {
        transform: scale(1.2);
        opacity: 0;
      }
    }

    @keyframes pulseLong {
      0% {
        transform: scale(1);
        opacity: 0;
      }

      50% {
        opacity: 1;
      }

      100% {
        transform: scale(1.4);
        opacity: 0;
      }
    }

